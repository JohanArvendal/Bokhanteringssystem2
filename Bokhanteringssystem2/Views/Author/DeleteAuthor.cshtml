@model Bokhanteringssystem2.Models.AuthorDetails

@{
    ViewData["Title"] = "DeleteAuthor";
}

<h2>Delete Author</h2>

<h3>Are you sure you want to delete this author?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Author ID
        </dt>
        <dd>
            @Model.AuthorID
        </dd>
        <dt>
            Name
        </dt>
        <dd>
            @Model.Name
        </dd>
    </dl>

    <form asp-action="DeleteAuthorConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AuthorID" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="SelectAuthors" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
