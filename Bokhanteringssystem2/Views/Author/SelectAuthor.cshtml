@model Bokhanteringssystem2.Models.AuthorDetails

@{
    ViewData["Title"] = "SelectAuthor";
}

<h1>SelectAuthor</h1>

<!-- Visa felmeddelanden från ViewBag -->
@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<!-- Visa framgångsmeddelanden från ViewBag -->
@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <div class="alert alert-success">@ViewBag.Success</div>
}

<h4>Author Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateAuthor" asp-controller="Author" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AuthorID" class="control-label"></label>
                <input asp-for="AuthorID" class="form-control" readonly />
                <span asp-validation-for="AuthorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
